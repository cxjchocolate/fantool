<?xml version="1.0" encoding="UTF-8" ?>
<project name="scm_1.0.1" basedir="." default="commit">
    <taskdef resource="net/sf/antcontrib/antlib.xml"/>
    <property name="srcdir" value="${soa}/branches/joyseed_1.0.0/scm/trunk" />
	<property name="dist" value="${srcdir}/zaofans-erp/target/classes" />
    <property name="jar_dir" value="${srcdir}/zaofans-erp/target" />
    <property name="prd_lib" value="${soa}/tags/joyseed_SCM_production_1.0.1/production_1.0.0/WEB-INF/lib/"/>
    <property name="cli_lib" value="${soa}/tags/joyseed_SCM_production_1.0.1/production_client_1.0.0/WEB-INF/lib/"/>
    <property name="tst_lib" value="${soa}/tags/joyseed_SCM_test_1.0.1/test_production_1.0.0/WEB-INF/lib/"/>
    <tstamp />
    <property name="jarfilename" value="${ant.project.name}-${DSTAMP}${TSTAMP}.jar" />  

    <path id="targets">
      <pathelement path="${prd_lib}"/>
      <pathelement path="${tst_lib}"/>
      <pathelement path="${cli_lib}"/>
    </path>
    <property name="commit_dir" value="${prd_lib} ${tst_lib} ${cli_lib}" />
    <property name="update_dir" value="${soa} ${scm} ${haiyan}"/>
            
    <fileset id="deploylib" dir="${basedir}/../lib">
		<include name="*.jar"/>
    </fileset>
    <!-- javac编译 -->
    <target name="compile" depends="update">
      <delete dir="${dist}" failonerror="false" deleteonexit="true" excludes="**/lib"/>
        <mkdir dir="${dist}"/>
    	<delete>
			  <fileset dir="${jar_dir}" includes="${ant.project.name}*.jar"/>
      </delete>       
      <javac nowarn="true" destdir="${dist}" source="1.7" target="1.7" encoding="utf-8" fork="true" includeantruntime="false">
            <src path="${srcdir}/zaofans-erp/src"/>
            <!--<excludesfile name="${haiyan}/trunk/haiyan-database/src/main/java/haiyan/database/SybaseDatabase.java" />-->
            <classpath>
            	<fileset dir="${soa}/tags/joyseed_SCM_production_1.0.1/production_1.0.0/WEB-INF/lib">  
            		<include name="*.jar" />
        			</fileset>
              <fileset refid="deploylib"/>
            </classpath>
      </javac>
    </target>
   
    <!-- jar -->
    <target name="jar" depends="compile">
      <!--svn delete older targets/${ant.project.name}*.jar -->
      <for list="" param="dir">
      	<path refid="targets"/>
      	<sequential>
           <for list="" param="file"> 
             <fileset dir="@{dir}">  
               <include name="${ant.project.name}*.jar"/>  
             </fileset>
             <sequential>
                <exec executable="svn" >
			             <arg line="delete @{file}" />
	              </exec>	
             </sequential>
           </for>
	      </sequential>
      </for>  

		  <jar destfile="${jar_dir}/${jarfilename}" basedir="${dist}" excludes="*.xml,*.properties" />
		  <!--copy & svn newer targets/${jarfilename} -->    
      <for list="" param="dir">
      	<path refid="targets"/>
      	<sequential>
          <copy file="${jar_dir}/${jarfilename}" todir="@{dir}" />
          <exec executable="svn" >
		        <arg line="add @{dir}/${jarfilename}"/>
	        </exec>
	      </sequential>
      </for>  	      
    </target>
    
    <!--update -->
		<target name="update">
			<for list="${update_dir}" param="dir">
				<sequential>
			    <exec executable="svn" >
						<arg line="update @{dir} --username ${svn.user} --password ${svn.password}"/>
	        </exec>
	      </sequential>
	    </for>
		</target>

			<!--commit -->
		<target name="commit" depends="jar">
			<exec executable="svn" >
						<arg line="commit ${commit_dir} -m '-------ant target-------' --username ${svn.user} --password ${svn.password}"/>
	    </exec>
		</target> 
 
</project>